<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="description" content="Appointment scheduling tool">
        <meta name="author" content="">    
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome to SkedApp{% endblock %}</title>    
        <!-- Bootstrap Assets -->
        <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/bootstrap-responsive.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/chosen.css') }}" rel="stylesheet">
         <!-- Custom Styles for Bootstrap -->
        <link href="{{ asset('/css/custom-styles.css') }}" rel="stylesheet">   

        <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js">
        </script>
        <![endif]-->
        <!-- Fav- and touch- icons -->
        <link rel="shortcut icon" href="{{ asset('/ico/favicon.ico') }}">
        <link rel="icon" type="image/x-icon" href="{{ asset('/ico/favicon.ico') }}" />
        <!-- load dynamic style sheet -->    
        {% block stylesheets %}{% endblock %} 
        <!-- load jquery -->
        <script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'></script>
        <!-- load jquery ui -->
        {% block jquery_ui %}{% endblock jquery_ui %}
    </head>
    <body>
        {% block header %}
            <div class="container BodyWidth">
                <div class="row" style="margin-top: 40px;">
                    <div class="span5 pull-left logoHandler">
                        <a href="{{ path("_welcome") }}" title="SkedApp logo"><img src="{{ asset("/img/logo.jpg") }}" title="logo" /></a>
                    </div>
                    <div class="span7 pull-right" style="margin-top: 0px; line-height: 21px;">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <ul class="nav nav-pills pull-right">
                                <li>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path("sked_app_company_list")}}">My admin</a>
                                    {% elseif is_granted('ROLE_SITE_USER') %}
                                        <a href="{{ path("sked_app_customer_list_bookings", {'id':app.user.id })}}">My bookings</a>
                                    {% elseif is_granted('ROLE_CONSULTANT_USER')  %}
                                        <a href="{{ path("sked_app_consultant_show", {'id': app.user.id })}}">My admin</a>
                                    {% endif %}
                                </li>
                                <li class="active"><a href="{{ path("_security_logout")}}"><i class="icon-white icon-off"></i> Logout</a></li>
                            </ul>
                        {% else %}
                            <span class="pull-right">
                                {% if booking_attempt is defined %}
                                    <a href="{{ path("sked_app_customer_register", {'booking_attempt': booking_attempt, 'company_id': company_id, 'consultant_id': consultant_id, 'booking_date': booking_date, 'timeslot_start': timeslot_start, 'service_ids': service_ids}) }}">Register</a>
                                {% else %}
                                    <a href="{{ path("sked_app_customer_register") }}">Register</a>
                                {% endif %}
                                <span>an account or </span> <a href="{{ path("_security_login")}}" class="btn btn-inverse"><i class="icon-white icon-off"></i> Login</a></span>
                        {% endif %}
                        <span class="pull-right" style="margin-top: 3px;">
                            <a href="{{ path("_welcome")}}">Make a Booking</a>&nbsp;&nbsp;|&nbsp;&nbsp;
                        </span>
                        <div class="headerWrapper"><h3 class="headerLabel">Search, Locate services in your area.</h3></div>
                    </div>
                </div>
            </div>
        {% endblock %}

        <div class="container bodyContainer">
            <div class="row marginLeft0px">
        {% block body %}{% endblock %}
            </div>
        </div>

        {% block footer %}
            <!-- start of footer container -->
            <div style="width: 100%" class="container">
                <div class="row">
                    <div class="indexfooter">
                        <footer>
                            <p style="color: #ccc; font-size: 12px">SkedApp Â© {{ date().format('Y') }} | <a href="">Make a Booking</a> | <a href="">Contact Us</a> | <a href="">Privacy Statement</a> | <a href="">Terms & Conditions</a></p>
                        </footer>
                    </div>
                </div>
            </div>
            <!-- end of footer container -->
        {% endblock %}

        <!-- Le javascript
                    ================================================== -->
            <!-- Placed at the end of the document so the pages load faster -->
            <script src="{{ asset('/js/bootstrap.js') }}"></script>
            <script src="{{ asset('/js/chosen.jquery.min.js') }}"></script>
            <script src="{{ asset('/js/bootstrap-button.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            <script src="{{ asset('/js/main.js') }}"></script>
            {% block javascripts %}{% endblock %}
        </body>
    </html>
