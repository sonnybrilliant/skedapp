<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome to SkedApp{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/bootstrap-responsive.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/chosen.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/style.css') }}" rel="stylesheet">
        <link href="{{ asset('/css/main.css') }}" rel="stylesheet">
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js'></script>
        {% block jquery_ui %}{% endblock jquery_ui %}
    </head>
    <body>
        {% block header %}
            <div class="container">
                <div class="row">
                    <div class="span5 pull-left">
                        <a href="{{ path("_welcome") }}" title="SkedApp logo"><img src="{{ asset("/img/logo.jpg") }}" width="180px" title="logo" /></a>
                    </div>
                    <div class="span7 pull-right" style="margin-top: 50px;">
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}

                            <a href="{{ path("_security_logout")}}" class="btn btn-primary pull-right"><i class="icon-white icon-off"></i> Logout</a>

                            <span class="pull-right">&nbsp</span>
                            <a href="{{ path("_welcome")}}" class="btn btn-warning pull-right"> Make a Booking &nbsp; &nbsp;
                                    <i class="icon-white icon-circle-arrow-right"></i></li>
                                </a>

                            {% if is_granted('ROLE_ADMIN') %}
                                <span class="pull-right">&nbsp</span>
                                <a href="{{ path("sked_app_company_list")}}" class="btn btn-warning pull-right"> My Company Admin &nbsp; &nbsp;
                                    <i class="icon-white icon-circle-arrow-right"></i></li>
                                </a>
                            {% elseif is_granted('ROLE_SITE_USER') and logged_in_customer is defined %}
                                <span class="pull-right">&nbsp</span>
                                <a href="{{ path("sked_app_customer_list_bookings", {'id':logged_in_customer.id })}}" class="btn btn-warning pull-right"> My Bookings &nbsp; &nbsp;
                                    <i class="icon-white icon-circle-arrow-right"></i></li>
                                </a>
                            {% elseif is_granted('ROLE_CONSULTANT_USER') and logged_in_consultant is defined %}
                                <span class="pull-right">&nbsp</span>
                                <a href="{{ path("sked_app_consultant_show", {'id':logged_in_consultant.id })}}" class="btn btn-warning pull-right"> My Consultant Admin &nbsp; &nbsp;
                                    <i class="icon-white icon-circle-arrow-right"></i></li>
                                </a>
                            {% endif %}

                        {% else %}
                            <span class="pull-right">
                                {% if booking_attempt is defined %}
                                    <a href="{{ path("sked_app_customer_register", {'booking_attempt': booking_attempt, 'company_id': company_id, 'consultant_id': consultant_id, 'booking_date': booking_date, 'timeslot_start': timeslot_start, 'service_ids': service_ids}) }}">Register</a>
                                {% else %}
                                    <a href="{{ path("sked_app_customer_register") }}">Register</a>
                                {% endif %}
                                an account or <a href="{{ path("_security_login")}}" class="btn btn-primary"><i class="icon-white icon-user"></i> Login</a></span>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endblock %}

        <div class="container">
            <div class="row">
        {% block body %}{% endblock %}
            </div>
        </div>

        {% block footer %}
            <!-- start of footer container -->
            <div class="container">
                <div class="row">
                    <hr />
                    <div class="span12">
                        <footer>
                            <p>SkedApp Â© {{ date().format('Y') }}</p>
                        </footer>
                    </div>
                </div>
            </div>
            <!-- end of footer container -->
        {% endblock %}

        <!-- Le javascript
                    ================================================== -->
            <!-- Placed at the end of the document so the pages load faster -->
            <script src="{{ asset('/js/bootstrap.js') }}"></script>
            <script src="{{ asset('/js/chosen.jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
            <script type="text/javascript" src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
            <script src="{{ asset('/js/main.js') }}"></script>
            {% block javascripts %}{% endblock %}
        </body>
    </html>
