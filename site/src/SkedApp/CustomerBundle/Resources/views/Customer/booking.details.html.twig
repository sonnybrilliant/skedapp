<div id="myModal_booking_{{booking.id}}" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Booking deatils</h3>
  </div>
  <div class="modal-body">
          <table  class="table table-striped table-condensed tablesorter">
              <tr>
                  <td><strong>Service provider</strong>:</td>
                  <td>{{booking.consultant.company.name}}</td>
              </tr>
              <tr>
                  <td><strong>Telephone</strong>:</td>
                  <td>{{booking.consultant.company.contactNumber}}</td>
              </tr>
              <tr>
                  <td><strong>Address</strong>:</td>
                  <td>{{booking.consultant.company.address}}</td>
              </tr>
              <tr>
                  <td><strong>Consultant name</strong>:</td>
                  <td>{{booking.consultant.fullName}}</td>
              </tr>
              <tr>
                  <td><strong>Service</strong>:</td>
                  <td>{{ booking.service.name }}</td>
              </tr>
              <tr>
                  <td><strong>Confirmed</strong>:</td>
                  <td>{{ booking.isConfirmedString }}</td>
              </tr>
              <tr>
                  <td><strong>Booking date</strong>:</td>
                  <td>{{ booking.hiddenAppointmentStartTime|date('M jS Y') }}</td>
              </tr>
              <tr>
                  <td><strong>Booking time</strong>:</td>
                  <td>{{ booking.hiddenAppointmentStartTime|date('G:s a') }}</td>
              </tr>
          </table>
  </div>
  <div class="modal-footer">
    <button class="btn btn-warning" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
