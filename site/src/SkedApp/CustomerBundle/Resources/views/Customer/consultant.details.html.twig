<div id="myModal_consultant_{{booking.id}}" class="modal hide fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Booking deatils</h3>
  </div>
  <div class="modal-body">
          <table  class="table table-striped table-condensed tablesorter">
              <tr>
                  <td rowspan="3"><img src="/uploads/consultants/{{ booking.consultant.id }}.{{ booking.consultant.path }}" title="consultant profile image" class="img-polaroid"  width="100px" height="100px" /></td>
                  <td><strong>Name</strong>:&nbsp;{{booking.consultant.fullName}}</td>
              </tr>              
              <tr>
                  <td><strong>Gender</strong>: {{ booking.consultant.gender.name }}</td>
              </tr>              
              <tr>
                  <td><strong>Services</strong>:
                                        {% for service in booking.consultant.consultantServices %}
                                          <span class="label {{ cycle(['label-inverse', 'label-success'], service.id) }}">{{ service.name }}</span>
                                        {% else %}
                                         No listed services found.
                                        {% endfor %}
                  </td>
              </tr>              
          </table>
  </div>
  <div class="modal-footer">
    <button class="btn btn-warning" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>
