{% extends "SkedAppCustomerBundle::layout.html.twig" %}
{% block title %}List customers{% endblock %}

{% block alert %}
    {% include "::alert.html.twig" %}
{% endblock %}  

{% block body %}
<div class="row-fluid body-secondary">
    <div class="span12">
        <h3>Manage customers</h3>
        <div style="margin-left: 0px;" class="span5">
            {% set vars = {'action': 'List'} %}
            {% include 'SkedAppConsultantBundle::breadcrumb.html.twig' with vars  %}
            </div>
            <div class="consultant-add-buttons pull-right">
                <a href="{{ path('sked_app_customer_download_csv') }}.html" class="btn btn-warning"><i class="icon-white icon-download-alt"></i>&nbsp;<strong>Download</strong></a>
                <form class="form-inline pull-right">
                    <div class="input-prepend space-left20">
                        <span class="add-on"><i class="icon-search" ></i></span>
                        <input style="border-radius: 0;" name="searchText" title="search" type="text" value="" placeholder="search" class="input-small search" />
                        <input style="height: 30px; border-radius: 0 4px 4px 0;" type="submit" value="GO!" class="btn btn-warning search-button" />
                    </div>
                </form>
            </div>
        {% include "SkedAppCustomerBundle:Customer:list.table.html.twig" %}
        </div>        
     </div>  
{% endblock body %}
