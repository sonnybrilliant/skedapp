<section>
    <table id="sortable" class="table table-striped table-condensed tablesorter">
        <thead>
          <tr>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'#', 'c.id') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>
                {% else %}
                    {% if pagination.isSorted('c.id') %}
                        {% if direction == 'asc'%}
                            <span class="pull-right"><i class="icon-chevron-up"></i></span>
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %}
            </th>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Full names', 'c.firstName') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>
                {% else %}
                    {% if pagination.isSorted('c.firstName') %}
                        {% if direction == 'asc'%}
                            <span class="pull-right"><i class="icon-chevron-up"></i></span>
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %}
            </th>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Email address', 'c.email') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>
                {% else %}
                    {% if pagination.isSorted('c.email') %}
                        {% if direction == 'asc'%}
                            <span class="pull-right"><i class="icon-chevron-up"></i></span>
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %}
            </th>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Mobile number', 'c.mobileNumber') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>
                {% else %}
                    {% if pagination.isSorted('c.mobileNumber') %}
                        {% if direction == 'asc'%}
                            <span class="pull-right"><i class="icon-chevron-up"></i></span>
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %}
            </th>
            <th scope="col" class="table-heading-blue">Bookings</th>
            <th scope="col" class="table-heading-blue"></th>
          </tr>
        </thead>
        <tbody>
          {% for customer in pagination %}
          <tr>
            <td><span style="padding-left: 10px"><a href='{{path('sked_app_customer_show', {'id': customer.id }) }}' rel="tooltip" title="click to view">{{ customer.id }}</a></span></td>
            <td><span style="padding-left: 10px">{{customer.fullName}}</span></td>
            <td><span style="padding-left: 10px">{{customer.email}}</span></td>
            <td><span style="padding-left: 10px">{{customer.mobileNumber}}</span></td>
            <td><span style="padding-left: 10px">{{customer.bookings.count}}</span></td>
            <td></td>
          </tr>
          {% endfor %}
        </tbody>
 </table>
    <div class="pagination pull-right">
     {{ knp_pagination_render(pagination) }}
    </div>
</section>


