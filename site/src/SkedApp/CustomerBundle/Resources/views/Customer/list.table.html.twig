<section>
    <table id="sortable" class="table table-striped table-condensed tablesorter">
        <thead>
          <tr>
            <th>{{ knp_pagination_sortable(pagination,'#', 'c.id')}}</th>
            <th>{{ knp_pagination_sortable(pagination,'First name', 'c.firstName')}} </th>
            <th>{{ knp_pagination_sortable(pagination,'Last name', 'c.lastName') }} </th>
            <th>{{ knp_pagination_sortable(pagination,'Email address', 'c.email') }} </th>
            <th>{{ knp_pagination_sortable(pagination,'Mobile number', 'c.mobileNumber') }} </th>
            <th>Bookings</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {% for customer in pagination %}
          <tr>
            <td><span style="padding-left: 10px"><a href='{{path('sked_app_customer_show', {'id': customer.id }) }}' rel="tooltip" title="click to view">{{ customer.id }}</a></span></td>
            <td><span style="padding-left: 10px">{{customer.firstName}}</span></td>
            <td><span style="padding-left: 10px">{{customer.lastName}}</span></td>
            <td><span style="padding-left: 10px">{{customer.email}}</span></td>
            <td><span style="padding-left: 10px">{{customer.mobileNumber}}</span></td>
            <td><span style="padding-left: 10px">{{customer.bookings.count}}</span></td>
            <td><a href='{{path('sked_app_customer_show', {'id': customer.id }) }}' rel="tooltip" title="click to view"><i class="icon-eye-open"></i>&nbsp;View</a>&nbsp;<a href='{{path('sked_app_customer_delete', {'id': customer.id }) }}' onclick="if(confirm('You are about to delete customer {{customer.firstName}} {{customer.lastName}}, click ok to confirm action.')) return true; else return false; " rel="tooltip" title="click to delete"><i class="icon-trash"></i>&nbsp;Delete</a></td>
          </tr>
          {% endfor %}
        </tbody>
 </table>
    <div class="pagination pull-right">
     {{ knp_pagination_render(pagination) }}
    </div>
</section>


