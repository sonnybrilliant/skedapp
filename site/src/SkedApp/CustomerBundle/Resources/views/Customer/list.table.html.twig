<section>
    <table id="sortable" class="table table-striped table-condensed tablesorter">
        <thead>
          <tr>
            <th><span class="sort-image"><img src="{{sort_img}}" title="Sort" class="{{sort}}" /></span>{{ pagination.sortable('#', 'c.id')|raw }}</th>
            <th><span class="sort-image"><img src="{{sort_img}}" title="Sort" class="{{sort}}" /></span>{{ pagination.sortable('First name', 'c.firstName')|raw }} </th>
            <th><span class="sort-image"><img src="{{sort_img}}" title="Sort" class="{{sort}}" /></span>{{ pagination.sortable('Last name', 'c.lastName')|raw }} </th>
            <th><span class="sort-image"><img src="{{sort_img}}" title="Sort" class="{{sort}}" /></span>{{ pagination.sortable('Email address', 'c.email')|raw }} </th>
            <th><span class="sort-image"><img src="{{sort_img}}" title="Sort" class="{{sort}}" /></span>{{ pagination.sortable('Mobile number', 'c.mobileNumber')|raw }} </th>
            <th>Bookings</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for customer in pagination %}
          <tr>
            <td><span style="padding-left: 10px"><a href='{{path('sked_app_customer_show', {'id': customer.id }) }}' rel="tooltip" title="click to view">{{ customer.id }}</a></span></td>
            <td><span style="padding-left: 10px">{{customer.firstName}}</span></td>
            <td><span style="padding-left: 10px">{{customer.lastName}}</span></td>
            <td><span style="padding-left: 10px">{{customer.email}}</span></td>
            <td><span style="padding-left: 10px">{{customer.mobileNumber}}</span></td>
            <td><span style="padding-left: 10px">{{customer.bookings.count}}</span></td>
            <td><a href='{{path('sked_app_customer_show', {'id': customer.id }) }}' rel="tooltip" title="click to view"><i class="icon-eye-open"></i></a>&nbsp;&nbsp;<a href='{{path('sked_app_customer_show', {'id': customer.id }) }}' rel="tooltip" title="click to edit"><i class="icon-edit"></i></a> &nbsp;<a href='{{path('sked_app_customer_delete', {'id': customer.id }) }}' onclick="if(confirm('You are about to delete customer {{customer.firstName}} {{customer.lastName}}, click ok to confirm action.')) return true; else return false; " rel="tooltip" title="click to delete"><i class="icon-trash"></i></a></td>
          </tr>
          {% endfor %}
        </tbody>
 </table>
    <div class="pagination pull-right">
        {{ pagination.render()|raw }}
    </div>
</section>


