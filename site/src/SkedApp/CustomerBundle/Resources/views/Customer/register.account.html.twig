{% extends "SkedAppCustomerBundle::layout.html.twig" %}

{% block title %}Register account{% endblock %}

{% block body %}
<div class="span12">
    <div class="span8" style="margin-left: 0px">
        <h3>Register account</h3>
        {% block alert %}
            {% include "::alert.html.twig" %}
        {% endblock %}

        {% include "SkedAppCustomerBundle:Customer:form.register.account.html.twig" %}
    </div>
    <div class="span3">
        <div class="well emphasize-dark">
            <h4><i class="icon-info-sign"></i>&nbsp; Hints </h4>
            <br />
            <p class="pull-right">
                    <ol>
                        <li>Provide email address.</li>
                        <br />
                        <li>Fill in recaptcha field or reload it if you cannot read the cryptic text.</li>
                    </ol>

            </p>
        </div>
    </div>
</div>
{% endblock body %}
