<form action="{{ path('sked_app_member_reset') }}" method="POST" {{ form_enctype(form) }}>
    <fieldset>
        <div for="email">{{ form_label(form.email) }}</div>
        {{ form_widget(form.email) }}
        <span class="help-inline">{{form_errors(form.email)}}</span>
        <div class="spacer1"></div>
        <label for="captach"></label>
        {{ form_widget(form.captcha) }}
        <span class="help-inline">{{form_errors(form.captcha)}}</span>
        <div class="btn-toolbar pull-right">
            <div class="btn-group">
                <button type="submit" name="submit" class="btn btn-warning" data-toggle="button">Submit <i class="icon-white icon-circle-arrow-right"></i></button>
            </div>
            <div class="btn-group">
                <button class="btn btn-small">Cancel</button>
            </div>
        </div>
    </fieldset>
    {{ form_rest(form) }}    
</form>
{{ form_stylesheet(form) }}
{{ form_javascript(form) }}
