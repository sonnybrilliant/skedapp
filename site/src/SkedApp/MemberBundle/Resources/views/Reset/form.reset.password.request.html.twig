<section class="content">
{% block alert %}
    {% include "::alert.html.twig" %}
{% endblock %}
<form class="display helpers form-horizontal" action="{{ path('sked_app_member_reset') }}" method="POST" {{ form_enctype(form) }}>
  <fieldset>
      <legend><span class="label label-info">Info</span> <small>All form fields are required.</small></legend>
      <div class="control-group {% if form_errors(form.email) %} error {% endif %}">
        <label class="control-label" for="email">{{ form_label(form.email) }}</label>
        <div class="controls">
          {{ form_widget(form.email) }}
          <span class="help-inline"><a href="#" rel="tooltip" data-placement="right" data-original-title="Provide email address."><i class="icon-info-sign"></i></a></span>
          <span class="help-inline">{{form_errors(form.email)}}</span>
        </div>
      </div>
      <div class="control-group {% if form_errors(form.captcha) %} error {% endif %}">
           <label class="control-label" for="captach"></label>
           <div class="controls">
             {{ form_widget(form.captcha) }}
             <span class="help-inline">{{form_errors(form.captcha)}}</span>
           </div>
      </div>
      <div class="form-actions">
          <button type="submit" name="submit" class="btn btn-warning" data-toggle="button">Reset &nbsp;&nbsp;<i class="icon-white icon-circle-arrow-right"></i></button>
                    &nbsp;&nbsp;<a href="{{ path('_welcome') }}" class="btn">Cancel</a>
      </div>
      {{ form_rest(form) }}
  </fieldset>
</form>
</section>
{{ form_stylesheet(form) }}
{{ form_javascript(form) }}
