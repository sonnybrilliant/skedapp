
{% extends "SkedAppMemberBundle::layout.html.twig" %}
{% block title %}List members{% endblock %}

{% block body %}
    {% block menu %}
     <div class="span3 bs-docs-sidenav">
           {% include "::menu.html.twig" %} 
     </div>       
    {% endblock menu %}    
    {% block content %}
     <div class="span8">
        <h3>Manage members</h3>
        <div class="span3" style="margin-left: -15px">
           {% set vars = {'action': 'List'} %}
           {% include 'SkedAppMemberBundle::breadcrumb.html.twig' with vars  %}
        </div>
        <div class="span5 pull-right" style="margin-right: -100px;">
            <a href="{{ path('sked_app_member_new')}}" class="btn btn-warning {% if is_granted('ROLE_ADMIN') == false %} disabled {% endif %}"><i class="icon-plus-sign icon-white"></i>&nbsp;Add a member</a>
            <form class="form-inline pull-right" >
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-search"></i></span>
                    <input name="search_text" title="search" type="text" value="search.."  class="input-small search inputHelper"/>
                    <input type="submit" value="Go" class="btn btn-warning btn-small" style="padding: 5px"/>
                    &nbsp;
                </div>
            </form>              
        </div>
        {% block alert %}
            {% include "::alert.html.twig" %}
        {% endblock %}
        <div class="span9" style="margin-left: 0px">
        {% include "SkedAppMemberBundle:Member:list.table.html.twig" %}
        </div>
     </div>  
    {% endblock content %}   
{% endblock body %}