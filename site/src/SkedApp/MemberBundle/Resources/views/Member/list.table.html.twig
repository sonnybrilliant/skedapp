<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th scope="col" width="4%" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'#', 'm.id') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>  
                {% else %}
                    {% if pagination.isSorted('m.id') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %} 
            </th>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'First name', 'm.firstName') }}
                {% if pagination.isSorted('m.fullName') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
               {% endif %}    
            </th>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Service provider', 'm.company') }}
                {% if pagination.isSorted('m.company') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
               {% endif %}    
            </th>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Is Super Admin?', 'm.isAdmin') }}
                {% if pagination.isSorted('m.isAdmin') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
               {% endif %}    
            </th>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Created At', 'm.createdAt') }}
                {% if pagination.isSorted('m.createdAt') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                {% endif %}                    
            </th>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Updated At', 'm.updatedAt') }}
                {% if pagination.isSorted('m.updatedAt') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                {% endif %}                    
            </th>
            <th scope="col" class="table-heading-blue"></th>
        </tr>
    </thead>
    <tbody>
        {% for member in pagination %}
        <tr>
           <td>{{ member.id }}</td>
           <td><a href='{{path('sked_app_member_show', {'id': member.id }) }}.html' rel="tooltip" title="click to view" >{{ member.fullName }}</a></td>
           <td><a href='{{path('sked_app_service_provider_show', {'id': member.company.id }) }}.html' rel="tooltip" title="click to view" >{{ member.company.name }}</a></td>
           {% if member.isAdmin == "true"%}
           <td><span class="label label-info">Yes</span></td>
           {% else %}
           <td><span class="label label-inverse">No</span></td>
           {% endif %}
           <td>{{member.createdAt|date('Y-m-d H:i A')}}</td>
           <td>{{member.updatedAt|date('Y-m-d H:i A')}}</td>
           <td>
               <small>
                  <a href='{{path('sked_app_member_show', {'id': member.id }) }}.html' rel="tooltip" title="click to view" class="btn btn-info"><i class="icon-white icon-eye-open"></i>&nbsp;Show</a>&nbsp;
                  <a href='{{path('sked_app_member_edit', {'id': member.id }) }}.html' rel="tooltip" title="click to edit" class="btn btn-info"><i class="icon-white icon-edit"></i>&nbsp;Edit</a>&nbsp;
               </small>
           </td>  
         </tr>
        {% endfor %}
    </tbody>  
</table>
<div class="btn-group pull-right">
    {{ knp_pagination_render(pagination) }}
</div>
