<form action="{{ path('sked_app_service_create') }}" method="POST" {{ form_enctype(form) }}>
  <fieldset>
      <div for="name">{{ form_label(form.name) }}</div>
      {{ form_widget(form.name) }} 
      <span class="help-inline">{{form_errors(form.name)}}</span>    
      <div for="description">{{ form_label(form.description) }}</div>
      {{ form_widget(form.description) }} 
      <span class="help-inline">{{form_errors(form.description)}}</span>    
      <div for="category">{{ form_label(form.category) }}</div>
      {{ form_widget(form.category) }} 
      <span class="help-inline">{{form_errors(form.category)}}</span>    
      <div for="appointmentDuration">{{ form_label(form.appointmentDuration) }}</div>
      {{ form_widget(form.appointmentDuration) }} 
      <span class="help-inline">{{form_errors(form.appointmentDuration)}}</span>    
       <div class="btn-toolbar pull-right">
            
          <button class="btn btn-warning">Submit <i class="icon-white icon-circle-arrow-right"></i></button>
                    &nbsp;&nbsp;<a href="{{ path('sked_app_service_list') }}" class="btn btn-small">Cancel</a>
      
</div>  
      {{ form_rest(form) }} 
  </fieldset>
</form>
{{ tinymce_init() }}
     