<form class="form-horizontal" action="{{ path('sked_app_service_create') }}" method="POST" {{ form_enctype(form) }}>
  <fieldset>
      <legend><span class="label label-info">Info</span> <small>Provide service details</small></legend>
      <div class="control-group {% if form_errors(form.name) %} error {% endif %}">
        <label class="control-label" for="name">{{ form_label(form.name) }}</label>
        <div class="controls">
          {{ form_widget(form.name) }} 
          <span class="help-inline">{{form_errors(form.name)}}</span>  
        </div>
      </div>      
      <div class="control-group {% if form_errors(form.description) %} error {% endif %}">
        <label class="control-label" for="description">{{ form_label(form.description) }}</label>
        <div class="controls">
          {{ form_widget(form.description) }} 
          <span class="help-inline">{{form_errors(form.description)}}</span>  
        </div>
      </div>      
      <div class="control-group {% if form_errors(form.category) %} error {% endif %}">
        <label class="control-label" for="category">{{ form_label(form.category) }}</label>
        <div class="controls">
          {{ form_widget(form.category) }} 
          <span class="help-inline">{{form_errors(form.category)}}</span>  
        </div>
      </div>      
      <div class="control-group {% if form_errors(form.appointmentDuration) %} error {% endif %}">
        <label class="control-label" for="appointmentDuration">{{ form_label(form.appointmentDuration) }}</label>
        <div class="controls">
          {{ form_widget(form.appointmentDuration) }} 
          <span class="help-inline">{{form_errors(form.appointmentDuration)}}</span>  
        </div>
      </div>      
      <div class="btn-toolbar pull-right">
            <div class="btn-group">
          <button type="submit" name="submit" class="btn btn-warning" data-toggle="button">Create &nbsp;&nbsp;<i class="icon-white icon-circle-arrow-right"></i></button>
                    &nbsp;&nbsp;<a href="{{ path('sked_app_service_list') }}" class="btn">Cancel</a>
      </div>
</div>  
      {{ form_rest(form) }} 
  </fieldset>
</form>
{{ tinymce_init() }}
     