{% extends "SkedAppServiceBundle::layout.html.twig" %}
{% block title %}Manage services{% endblock %}

{% block body %}
<div class="row-fluid body-secondary">
    <div class="span12">
        <h3>Manage services</h3>
        <div class="span5">
            {% set vars = {'action': 'List'} %}
            {% include 'SkedAppServiceBundle::breadcrumb.html.twig' with vars  %}
            </div>
            <div class="span6 pull-right">
                <a href="{{ path('sked_app_service_new') }}" class="btn btn-warning"><i class="icon-white icon-plus-sign"></i>&nbsp;<strong>Add service</strong></a>
                <form class="form-inline pull-right">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-search" ></i></span>
                        <input name="searchText" title="search" type="text" value="" placeholder="search" class="input-small search" />
                        <input type="submit" value="GO!" class="btn btn-warning search-button" />
                    </div>
                </form>
            </div>
        {% include "SkedAppServiceBundle:Service:list.table.html.twig" %} 
    </div> <!-- Dashboard Content --> 
</div> 
{% endblock body %}
