<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th scope="col"  class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'#', 's.id') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>  
                {% else %}
                    {% if pagination.isSorted('s.id') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %} 
            </th>
            <th scope="col"  class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Name', 's.name') }}
                {% if pagination.isSorted('s.name') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
               {% endif %}    
            </th>
            <th scope="col"  class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Category', 's.category') }}
                {% if pagination.isSorted('s.category') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                {% endif %}    
            </th>
            <th scope="col"  class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Length', 's.appointmentDuration') }}
                {% if pagination.isSorted('s.appointmentDuration') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                {% endif %}    
            </th>
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Deleted', 's.isDeleted') }}
                {% if pagination.isSorted('s.isDeleted') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                {% endif %}    
            </th>
            <th scope="col"  class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Created At', 'c.createdAt') }}
                {% if pagination.isSorted('c.createdAt') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                {% endif %}                    
            </th>
            <th scope="col" class="table-heading-blue"></th>
        </tr>
    </thead>
    <tbody>
    {% for service in pagination %}
        <tr>
            <td>{{service.id}}</td>
            <td>{{service.name}}</td>
            <td>{{service.category.name}}</td>
            <td>{{service.appointmentDuration.name}}</td>
            {% if service.isDeleted %}
                <td><span>Yes</span></td>
           {% else %}
                <td><span>No</span></td>
           {% endif%}
            <td>{{service.createdAt|date('Y-m-d H:i A')}}</td>
            <td>
                <small>
                    <a href='{{path('sked_app_service_edit', {'id': service.id }) }}' rel="tooltip" title="click to view"><i class="icon-black icon-edit"></i>&nbsp;Edit</a> &nbsp;
                    <a href='{{path('sked_app_service_delete', {'id': service.id }) }}' onclick="if(confirm('You are about to delete {{service.name}} service, click ok to confirm action.')) return true; else return false; " rel="tooltip" title="click to delete"><i class="icon-black icon-trash"></i>&nbsp;Delete</a>
                </small>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<div class="btn-group pull-right">
    {{ knp_pagination_render(pagination) }}
</div>



