{% extends "SkedAppCoreBundle::base.mail.html.twig" %}
{% block body %}
    <table width="100%">
        <tr>
            <td style="font-family:Arial,Helvetica,sans-serif;font-size:15px;color:#FFF;padding-left:15px;padding-right:15px;padding-top:10px;padding-bottom:10px;text-align:center; background-color:#176ACE;border:1px solid #777;">
                <font size="+2">Pending Appointment</font>
            </td>
        </tr>
    </table><br /><br />
    <p style="margin-bottom: 6pt;">Hi {{ user.firstName }} {{ user.lastName }},</p>
    <p style="margin-bottom: 6pt;">This mail is to inform you that a booking has been scheduled for you with {{ consultant.fullName }} on {{ date }}.</p>
    <p style="margin-bottom: 6pt;">You will receive a confirmation e-mail once the booking has been confirmed.</p>
    <p style="margin-bottom: 6pt;"></p>
    <p style="margin-bottom: 6pt;">Your scheduled booking details are as follows:</p>
    <p style="margin-bottom: 6pt;">
        <strong>Consultant</strong>: {{ consultant.fullName }} <br/>
        <strong>Service to be tendered </strong>: {{ service.name }}  <br />
        <strong>Contact number </strong>: {{ company.contactNumber }}  <br />
        <strong>Location </strong>: {{ company.name }}, {{ company.address }}  <br />
        <strong>Location GPS co-ordinates </strong>: {{ company.completeGPS }}  <br />
        <strong>Date</strong>: {{ date }}<br />
    </p>
    <p style="margin-bottom: 6pt;">Business contact details: <br/> {{ provider.name }} <br /><br /> {{ provider.contactNumber }} <br> {{ provider.address }} <br />{{ provider.locality }} <br /></p>
{% endblock body %}