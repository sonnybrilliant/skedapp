{% extends "SkedAppCoreBundle::base.mail.html.twig" %}
{% block body %}
    <table width="100%">
        <tr>
            <td style="font-family:Arial,Helvetica,sans-serif;font-size:15px;color:#FFF;padding-left:15px;padding-right:15px;padding-top:10px;padding-bottom:10px;text-align:center; background-color:#176ACE;border:1px solid #777;">
                <font size="+2">Reset Password</font>
            </td>
        </tr>
    </table><br /><br />
    <strong style="margin-bottom: 6pt;">Hi {{ name }},</strong>
    <p style="margin-bottom: 6pt;">Changing your password is simple. Please use the link below within 24 hours.</p>
    <p style="margin-bottom: 6pt;"><a style="color: #006699;" href="{{ link }}">{{ link }}</a></p>
{% endblock body %}