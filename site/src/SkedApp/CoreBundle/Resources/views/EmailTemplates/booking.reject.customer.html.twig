{% extends "SkedAppCoreBundle::base.mail.html.twig" %}
{% block body %}
    <table width="100%">
        <tr>
            <td style="font-family:Arial,Helvetica,sans-serif;font-size:15px;color:#FFF;padding-left:15px;padding-right:15px;padding-top:10px;padding-bottom:10px;text-align:center; background-color:#F71B23;border:1px solid #777;">
                <font size="+2">Booking Rejected</font>
            </td>
        </tr>
    </table><br /><br />
    <p style="margin-bottom: 6pt;">Hello {{ fullName }},</p>
    <p style="margin-bottom: 6pt;">Unfortunately the time slot you have chosen with {{company}} cannot be confirmed at this time.</p>
    <p style="margin-bottom: 6pt;">Please select another time slot to make a booking.</p>
    <p style="margin-bottom: 6pt;">We apologize for the inconvenience this might have caused. </p>
{% endblock body %}