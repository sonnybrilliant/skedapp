{% extends "SkedAppCustomerBundle::layout.html.twig" %}

{% block title %}Refer a friend{% endblock %}

{% block body %}
<div class="span12">
    <div class="span8" style="margin-left: 0px">
        <h3>Refer a friend</h3>
        {% block alert %}
            {% include "::alert.html.twig" %}
        {% endblock %}

        {% include "SkedAppCoreBundle:Invite:form.invite.friend.consultant.html.twig" %}
    </div>
    <div class="span3">
        <div class="well emphasize-dark">
            <h4><i class="icon-info-sign"></i>&nbsp; Hints </h4>
            <br />
            <p class="pull-right">
                    <ol>
                        <li>Provide your friends email address.</li>
                        <br />
                        <li>Fill in recaptcha field or reload it if you cannot read the cryptic text.</li>
                    </ol>

            </p>
        </div>
    </div>
</div>
{% endblock body %}
