<form  action="{{ path('sked_app_invite_friends_consultant',{'slug':slug }) }}" method="POST" {{ form_enctype(form) }}>
    <fieldset>
        <div class="control-group {% if form_errors(form.friendName) %} error {% endif %}">
            <div class="control-label" for="friend_name">{{ form_label(form.friendName) }}</div>
            <div class="controls">
                {{ form_widget(form.friendName) }}
                <span class="help-inline">{{form_errors(form.friendName)}}</span>    
            </div>
        </div>           
        <div class="control-group {% if form_errors(form.email) %} error {% endif %}">
            <div class="control-label" for="friend_email">{{ form_label(form.email) }}</div>
            <div class="controls">
                {{ form_widget(form.email) }}
                <span class="help-inline">{{form_errors(form.email)}}</span>    
            </div>
        </div>           
         <div class="btn-toolbar pull-right">
            <div class="btn-group">
                <button type="submit" name="submit" class="btn btn-warning">Submit <i class="icon-white icon-circle-arrow-right"></i></button>
            </div>
            <div class="btn-group">
                <a href="{{ path('_welcome') }}" class="btn btn-small">Cancel</a>
            </div>
        </div> 
    </fieldset>
    {{ form_rest(form) }}    
</form>