<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered table-condensed">
    <thead>
          <tr>
            <th scope="col" class="table-heading-blue">
                 Customer
             </th>
            <th scope="col" class="table-heading-blue">
                 Date
             </th>
            <th scope="col" class="table-heading-blue">
                 Time
             </th>
            <th scope="col" class="table-heading-blue">
                Consultant
             </th>

            <th scope="col" class="table-heading-blue">
                Service
             </th>
            <th scope="col" class="table-heading-blue">
                Confirmed
             </th>
            <th scope="col" class="table-heading-blue">
                Created At
             </th>
             <th  scope="col" class="table-heading-blue"></th>
          </tr>
   </thead>
   <tbody>
          {% for booking in pagination %}
          <tr>
            <td>{{booking.customerString}} - {{booking.customerNumberString}}</td>
            <td>{{booking.appointmentDateString}}</td>
            <td>{{booking.startTimeslotString}} - {{booking.endTimeslotString}}</td>
            {% if is_granted('ROLE_ADMIN') %}
            <td><a href="{{ path('sked_app_consultant_show',{'slug': booking.consultant.slug })}}" title="View consultant">{{booking.consultantString}}</a></td>
            {% endif %}
            <td><span class="label label-info">{{booking.service.name}}</span></td>
            <td>{{booking.isConfirmedString}}</td>
            <td>{{booking.createdAt|date('M jS Y')}}</td>
            <td><a href='{{ path('sked_app_booking_edit',{'bookingId':booking.id})}}.html' rel="tooltip" title="click to view" class="btn btn-small btn-primary"><i class="icon-white icon-eye-open"></i>&nbsp;Edit</a>&nbsp;</td>
          </tr>
          {% endfor %}
    </tbody>
 </table>
<div class="btn-group pull-right">
    {{ knp_pagination_render(pagination) }}
</div>
