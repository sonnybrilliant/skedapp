<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered table-condensed">
    <thead>
          <tr>
            <th scope="col" class="table-heading-blue">
                 #
             </th>
            <th scope="col" class="table-heading-blue">
                 Customer
             </th>
            <th scope="col" class="table-heading-blue">
                 Date
             </th>
            <th scope="col" class="table-heading-blue">
                 Time
             </th>
            <th scope="col" class="table-heading-blue">
                Consultant
             </th>

            <th scope="col" class="table-heading-blue">
                Service
             </th>
            <th scope="col" class="table-heading-blue">
                Confirmed
             </th>
            <th scope="col" class="table-heading-blue">
                Rejected
             </th>
             <th  scope="col" class="table-heading-blue"></th>
          </tr>
   </thead>
   <tbody>
          {% for booking in pagination %}
          <tr>
            <td><input type="checkbox" class="chkBookings" name="type" value="{{booking.id}}" /></td>  
            <td>{{booking.customerString}} - {{booking.customerNumberString}}</td>
            <td>{{booking.appointmentDateString}}</td>
            <td>{{booking.startTimeslotString}} - {{booking.endTimeslotString}}</td>
            <td><a href="{{ path('sked_app_consultant_show',{'slug': booking.consultant.slug })}}" title="View consultant">{{booking.consultantString}}</a></td>
            <td><span class="label label-info">{{booking.service.name}}</span></td>
            <td>{{booking.isConfirmedString}}</td>
            <td>
            {% if booking.isRejected != "true"%}
             No
            {% else %}
             Yes
            {% endif %}
            </td>
            <td>
                <a href='{{ path('sked_app_booking_edit',{'bookingId':booking.id})}}.html' rel="tooltip" title="click to edit" class="btn btn-small btn-info"><i class="icon-white icon-edit"></i>&nbsp;Edit</a>
                <a href='{{ path('sked_app_booking_confirm',{'bookingId':booking.id})}}.html' rel="tooltip" title="click to confirm" class="btn btn-small btn-warning"><i class="icon-white icon-ok"></i>&nbsp;Confirm</a>
                <a href='{{ path('sked_app_booking_admin_cancel',{'bookingId':booking.id})}}.html' rel="tooltip" title="click to cancel" class="btn btn-small btn-inverse"><i class="icon-white icon-ban-circle"></i>&nbsp;Cancel</a>
                <a href='{{ path('sked_app_booking_reject',{'bookingId':booking.id})}}.html' rel="tooltip" title="click to reject" class="btn btn-small btn-danger"><i class="icon-white icon-trash"></i>&nbsp;Reject</a>
            
            </td>
          </tr>
          {% endfor %}
    </tbody>
 </table>
<div class="btn-group pull-right">
    {{ knp_pagination_render(pagination) }}
</div>
