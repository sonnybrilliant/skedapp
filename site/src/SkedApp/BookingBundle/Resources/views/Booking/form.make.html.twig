<div class="row-fluid body-main rounded-all">
    <div class="span12 tabs-img">
        <img src="{{ asset('/img/tabs-set3.png') }}" width="362" height="55" alt="step-tabs;" class="space-left" />
    </div>
    <div class="clearfix"></div>
    <div class="span5">
        <div class="confirm-background">
            <form action="{{ path('sked_app_booking_made') }}" method="POST" {{ form_enctype(form) }}>
                {{ form_widget(form.appointmentDate) }}
                {{ form_widget(form.startTimeslot) }}
                {{ form_widget(form.consultant) }}
                {{ form_widget(form.service) }}
                    <h3>Appointment Details</h3>
                    <ul class="unstyled space-left">
                        <li>Service Provider: <span class="gray-text"><strong>{{ consultant.company.name }}</strong></span></li>
                        <li>Consultant: <span class="gray-text"><strong>{{ consultant.getFullName() }}</strong></span></li>
                        <li>Location: <span class="gray-text"><strong>{{ consultant.company.address }}</strong></span><br />
                            <span class="asterisk">*</span><strong>HINT :</strong> For more information on the location of the appointment, please see the map.</li>
                        <li>Service: <span class="gray-text"><strong>{{ booking_service }}</strong></span></li>
                        <li>Appointment Date: <span class="gray-text"><strong>{{ booking_date }}</strong></span></li>
                        <li>Appointment Time: <span class="gray-text"><strong>{{ booking_time_start }} - {{ booking_time_end }}</strong></span></li>
                    </ul>
                <label>Add Notes:</label>
                {{ form_widget(form.description) }}
                <div class="spacer1"></div>
                <div class="submitButton">
                    <button type="submit" name="submit" class="btn btn-warning pull-right" data-toggle="button" data-loading-text="Searching...">Make Booking &nbsp;&nbsp;<i class="icon-white icon-black icon-circle-arrow-right"></i></button>
                </div>
              </fieldset>
              {{ form_rest(form) }}      
            </form>
        </div>
    </div>
    <div class="span7">
        <div class="map-box">
            <h3>Location Details</h3>
            {{ google_map_container(map) }}
        </div>
    </div>
</div> <!-- End .row-fluid -->
{{ tinymce_init() }}