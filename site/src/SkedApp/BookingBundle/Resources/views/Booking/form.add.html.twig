<form action="{{ path('sked_app_booking_create',{'type':type}) }}.html" method="POST" {{ form_enctype(form) }}>
  <fieldset>
      <div class="control-group {% if form_errors(form.appointmentDate) %} error {% endif %}">
        <span class="control-label" for="appointment_date">{{ form_label(form.appointmentDate) }}</span>
        <div class="controls">
          {{ form_widget(form.appointmentDate) }}
          <span class="help-inline">{{form_errors(form.appointmentDate)}}</span>
        </div>
      </div>
      <div class="control-group {% if form_errors(form.startTimeslot) %} error {% endif %}">
        <span class="control-label" for="start_timeslot">{{ form_label(form.startTimeslot) }}</span>
        <div class="controls">
          {{ form_widget(form.startTimeslot) }}
          <span class="help-inline">{{form_errors(form.startTimeslot)}}</span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="start_timeslot">Override end time:</label>
        <div class="controls">
            <input type="checkbox" name="override" id="override" value="" />
        </div>
      </div>
          <div style="display: none" class="endtime control-group {% if form_errors(form.endTimeslot) %} error {% endif %}">
        <span class="control-label" for="end_timeslot">{{ form_label(form.endTimeslot) }}</span>
        <div class="controls">
          {{ form_widget(form.endTimeslot) }}
          <span class="help-inline">{{form_errors(form.endTimeslot)}}</span>
        </div>
      </div>
      <div class="control-group {% if form_errors(form.customerOrNot) %} error {% endif %}">
        <span class="control-label" for="customer">{{ form_label(form.customerOrNot) }}</span>
        <div class="controls">
          {{ form_widget(form.customerOrNot) }}
          <span class="help-inline">{{form_errors(form.customerOrNot)}}</span>
        </div>
      </div>

      <div id="divCustomerSelect">
          <div class="control-group {% if form_errors(form.customer) %} error {% endif %}">
            <span class="control-label" for="customer">{{ form_label(form.customer) }}</span>
            <div class="controls">
              {{ form_widget(form.customer) }}
              <span class="help-inline">{{form_errors(form.customer)}}</span>
            </div>
          </div>
      </div>

      <div id="divCustomerPotentialSelect">

          <div class="control-group {% if form_errors(form.customerPotential) %} error {% endif %}">
            <span class="control-label" for="customer_potential">{{ form_label(form.customerPotential) }}</span>
            <div class="controls">
              {{ form_widget(form.customerPotential) }}
              <span class="help-inline">{{form_errors(form.customerPotential)}}</span>
            </div>
          </div>

          <div id="divCustomerPotentialCreate">
              <div class="control-group {% if form_errors(formCustomerPotential.firstName) %} error {% endif %}">
                <span class="control-label" for="customer_potential">{{ form_label(formCustomerPotential.firstName) }}</span>
                <div class="controls">
                  {{ form_widget(formCustomerPotential.firstName) }}
                  <span class="help-inline">{{form_errors(formCustomerPotential.firstName)}}</span>
                </div>
              </div>
          </div>

          <div id="divCustomerPotentialCreate">
              <div class="control-group {% if form_errors(formCustomerPotential.lastName) %} error {% endif %}">
                <span class="control-label" for="customer_potential">{{ form_label(formCustomerPotential.lastName) }}</span>
                <div class="controls">
                  {{ form_widget(formCustomerPotential.lastName) }}
                  <span class="help-inline">{{form_errors(formCustomerPotential.lastName)}}</span>
                </div>
              </div>
          </div>

          <div id="divCustomerPotentialCreate">
              <div class="control-group {% if form_errors(formCustomerPotential.email) %} error {% endif %}">
                <span class="control-label" for="customer_potential">{{ form_label(formCustomerPotential.email) }}</span>
                <div class="controls">
                  {{ form_widget(formCustomerPotential.email) }}
                  <span class="help-inline">{{form_errors(formCustomerPotential.email)}}</span>
                </div>
              </div>
          </div>

          <div id="divCustomerPotentialCreate">
              <div class="control-group {% if form_errors(formCustomerPotential.mobileNumber) %} error {% endif %}">
                <span class="control-label" for="customer_potential">{{ form_label(formCustomerPotential.mobileNumber) }}</span>
                <div class="controls">
                  {{ form_widget(formCustomerPotential.mobileNumber) }}
                  <span class="help-inline">{{form_errors(formCustomerPotential.mobileNumber)}}</span>
                </div>
              </div>
          </div>

      </div>

      <div class="control-group {% if form_errors(form.consultant) %} error {% endif %}">
        <span class="control-label" for="consultants">{{ form_label(form.consultant) }}</span>
        <div class="controls">
          {{ form_widget(form.consultant) }}
          <span class="help-inline">{{form_errors(form.consultant)}}</span>
        </div>
      </div>
      <div class="control-group {% if form_errors(form.isConfirmed) %} error {% endif %}">
        <span class="control-label" for="leave">{{ form_label(form.isConfirmed) }}</span>
        <div class="controls">
          {{ form_widget(form.isConfirmed) }}
          <span class="help-inline">{{form_errors(form.isConfirmed)}}</span>
        </div>
      </div>
      <div class="control-group {% if form_errors(form.service) %} error {% endif %}">
        <span class="control-label" for="consultant_services">{{ form_label(form.service) }}</span>
        <div class="controls">
          {{ form_widget(form.service) }}
          <span class="help-inline">{{form_errors(form.service)}}</span>
        </div>
      </div>
      <div class="control-group {% if form_errors(form.description) %} error {% endif %}">
        <span class="control-label" for="description">{{ form_label(form.description) }}</span>
        <div class="controls">
          {{ form_widget(form.description) }}
          <span class="help-inline">{{form_errors(form.description)}}</span>
        </div>
      </div>
      <div class="btn-toolbar pull-right">
          <button type="submit" name="submit" class="btn btn-warning" data-toggle="button">Create &nbsp;&nbsp;<i class="icon-white icon-circle-arrow-right"></i></button>
                    &nbsp;&nbsp;
          {% if type == 1 %}
                    <a href="{{ path('sked_app_booking_manage_calender_show') }}" class="btn">Cancel</a>
          {% else %} 
                    <a href="{{ path('sked_app_booking_manage_show') }}" class="btn">Cancel</a>
          {% endif %}           
      </div>
      {{ form_rest(form) }}
  </fieldset>
</form>
{{ tinymce_init() }}