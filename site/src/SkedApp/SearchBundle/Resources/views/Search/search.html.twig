{% extends "SkedAppSearchBundle::layout.html.twig" %}
{% block title %}SkedApp | Search Results{% endblock %}

{% block body %}
    {% include "SkedAppSearchBundle:Search:form.search.results.html.twig" with {'search_results': true} %}
<div class="row-fluid message-background">
    <div class="span12 message-devider">
        <span class="asterisk">*</span>NB: Please note, you can change the search date when you do not see any available appoinments slots.
        <!-- This is just a visual devider to seperate the content from the navigation -->
    </div>
    </div>
    {% if pagination is defined %}
        {% include "SkedAppSearchBundle:Search:search.results.display.html.twig" %}
    {% endif %}

    {% block stylesheets %}
    <link href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" rel="stylesheet">
    {% endblock %}

    {% block jquery_ui %}
        <script type="text/javascript" src="http://maps.googleapis.com/maps/api/js?sensor=false"></script>
        <script type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js'></script>
        <script type='text/javascript' src='{{ asset('/js/jquery.ui.addresspicker.js') }}'></script>
    {% endblock jquery_ui %}

    {% block javascripts %}
        <script src="{{ asset('/js/search-results.js') }}"></script>
    {% endblock javascripts %}
{% endblock %}
