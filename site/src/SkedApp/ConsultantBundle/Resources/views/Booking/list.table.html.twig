<div class="span2 pull-right">
    <a href="{{ path('sked_app_consultant_booking_day_print', {'id': consultant.id}) }}" class="btn btn-warning pull-right"><i
        class="icon-white icon-plus-sign"></i>&nbsp;<strong>Print bookings</strong></a>
</div>
<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered table-condensed">
    <thead>
          <tr>
            <th scope="col" class="table-heading-blue">
                 {{ knp_pagination_sortable(pagination,'Customer', 'b.customer') }}
                 {% if isDirectionSet == false %}
                     <span class="pull-right"><i class="icon-chevron-up"></i></span>
                 {% else %}
                     {% if pagination.isSorted('b.customer') %}
                         {% if direction == 'asc'%}
                             <span class="pull-right"><i class="icon-chevron-up"></i></span>
                         {% else %}
                             <span class="pull-right"><i class="icon-chevron-down"></i></span>
                         {% endif %}
                     {% endif %}
                 {% endif %}
             </th>
            <th scope="col" class="table-heading-blue">
                 {{ knp_pagination_sortable(pagination,'Date', 'b.appointmentDate') }}
                 {% if isDirectionSet == false %}
                     <span class="pull-right"><i class="icon-chevron-up"></i></span>
                 {% else %}
                     {% if pagination.isSorted('b.appointmentDate') %}
                         {% if direction == 'asc'%}
                             <span class="pull-right"><i class="icon-chevron-up"></i></span>
                         {% else %}
                             <span class="pull-right"><i class="icon-chevron-down"></i></span>
                         {% endif %}
                     {% endif %}
                 {% endif %}
             </th>
            <th scope="col" class="table-heading-blue">
                 {{ knp_pagination_sortable(pagination,'Time', 'b.hiddenAppointmentStartTime') }}
                 {% if isDirectionSet == false %}
                     <span class="pull-right"><i class="icon-chevron-up"></i></span>
                 {% else %}
                     {% if pagination.isSorted('b.hiddenAppointmentStartTime') %}
                         {% if direction == 'asc'%}
                             <span class="pull-right"><i class="icon-chevron-up"></i></span>
                         {% else %}
                             <span class="pull-right"><i class="icon-chevron-down"></i></span>
                         {% endif %}
                     {% endif %}
                 {% endif %}
             </th>
             {% if is_granted('ROLE_ADMIN') %}
            <th scope="col" class="table-heading-blue">
                 {{ knp_pagination_sortable(pagination,'Consultant', 'b.consultant') }}
                 {% if isDirectionSet == false %}
                     <span class="pull-right"><i class="icon-chevron-up"></i></span>
                 {% else %}
                     {% if pagination.isSorted('b.consultant') %}
                         {% if direction == 'asc'%}
                             <span class="pull-right"><i class="icon-chevron-up"></i></span>
                         {% else %}
                             <span class="pull-right"><i class="icon-chevron-down"></i></span>
                         {% endif %}
                     {% endif %}
                 {% endif %}
             </th>
             {% endif %}
            <th scope="col" class="table-heading-blue">
                 {{ knp_pagination_sortable(pagination,'Service', 'b.service') }}
                 {% if isDirectionSet == false %}
                     <span class="pull-right"><i class="icon-chevron-up"></i></span>
                 {% else %}
                     {% if pagination.isSorted('b.service') %}
                         {% if direction == 'asc'%}
                             <span class="pull-right"><i class="icon-chevron-up"></i></span>
                         {% else %}
                             <span class="pull-right"><i class="icon-chevron-down"></i></span>
                         {% endif %}
                     {% endif %}
                 {% endif %}
             </th>
            <th scope="col" class="table-heading-blue">
                 {{ knp_pagination_sortable(pagination,'Confirmed', 'b.isConfirmed') }}
                 {% if isDirectionSet == false %}
                     <span class="pull-right"><i class="icon-chevron-up"></i></span>
                 {% else %}
                     {% if pagination.isSorted('b.isConfirmed') %}
                         {% if direction == 'asc'%}
                             <span class="pull-right"><i class="icon-chevron-up"></i></span>
                         {% else %}
                             <span class="pull-right"><i class="icon-chevron-down"></i></span>
                         {% endif %}
                     {% endif %}
                 {% endif %}
             </th>
            <th scope="col" class="table-heading-blue">
                 {{ knp_pagination_sortable(pagination,'Created At', 'b.createdAt') }}
                 {% if isDirectionSet == false %}
                     <span class="pull-right"><i class="icon-chevron-up"></i></span>
                 {% else %}
                     {% if pagination.isSorted('b.createdAt') %}
                         {% if direction == 'asc'%}
                             <span class="pull-right"><i class="icon-chevron-up"></i></span>
                         {% else %}
                             <span class="pull-right"><i class="icon-chevron-down"></i></span>
                         {% endif %}
                     {% endif %}
                 {% endif %}
             </th>
             <th  scope="col" class="table-heading-blue"></th>
          </tr>
   </thead>
   <tbody>
          {% for booking in pagination %}
          <tr>
            <td>{{booking.customerString}} - {{booking.customerNumberString}}</td>
            <td>{{booking.appointmentDateString}}</td>
            <td>{{booking.startTimeslotString}} - {{booking.endTimeslotString}}</td>
            {% if is_granted('ROLE_ADMIN') %}
            <td><a href="{{ path('sked_app_consultant_show',{'slug': booking.consultant.slug })}}" title="View consultant">{{booking.consultantString}}</a></td>
            {% endif %}
            <td><span class="label label-info">{{booking.service.name}}</span></td>
            <td>{{booking.isConfirmedString}}</td>
            <td>{{booking.createdAt|date('M jS Y')}}</td>
            <td><a href='{{ path('sked_app_consultant_booking_show',{'id':booking.id})}}' rel="tooltip" title="click to view" class="btn btn-small btn-primary"><i class="icon-white icon-eye-open"></i>&nbsp;View</a>&nbsp;</td>
          </tr>
          {% endfor %}
    </tbody>
 </table>
<div class="btn-group pull-right">
    {{ knp_pagination_render(pagination) }}
</div>
