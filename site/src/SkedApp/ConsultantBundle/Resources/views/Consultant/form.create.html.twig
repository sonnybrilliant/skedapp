<form class="form-horizontal" action="{{ path('sked_app_consultant_create') }}" method="POST" {{ form_enctype(form) }}>
  <fieldset>
      <legend><span class="label label-info">Info</span> <small>Personal details.</small></legend>
      <div class="control-group {% if form_errors(form.company) %} error {% endif %}">
        <label class="control-label" for="name">{{ form_label(form.company) }}</label>
        <div class="controls">
          {{ form_widget(form.company) }} 
          <span class="help-inline">{{form_errors(form.company)}}</span>  
        </div>
      </div>      
      <div class="control-group {% if form_errors(form.firstName) %} error {% endif %}">
        <label class="control-label" for="name">{{ form_label(form.firstName) }}</label>
        <div class="controls">
          {{ form_widget(form.firstName) }} 
          <span class="help-inline">{{form_errors(form.firstName)}}</span>  
        </div>
      </div> 
      <div class="control-group {% if form_errors(form.lastName) %} error {% endif %}">
        <label class="control-label" for="name">{{ form_label(form.lastName) }}</label>
        <div class="controls">
          {{ form_widget(form.lastName) }} 
          <span class="help-inline">{{form_errors(form.lastName)}}</span>  
        </div>
      </div>
      <div class="control-group {% if form_errors(form.gender) %} error {% endif %}">
        <label class="control-label" for="name">{{ form_label(form.gender) }}</label>
        <div class="controls">
          {{ form_widget(form.gender) }} 
          <span class="help-inline">{{form_errors(form.gender)}}</span>  
        </div>
      </div>
      <div class="control-group {% if form_errors(form.professionalStatement) %} error {% endif %}">
        <label class="control-label" for="name">{{ form_label(form.professionalStatement) }}</label>
        <div class="controls">
          {{ form_widget(form.professionalStatement) }} 
          <span class="help-inline">{{form_errors(form.professionalStatement)}}</span>  
        </div>
      </div>
      <div class="control-group {% if form_errors(form.speciality) %} error {% endif %}">
        <label class="control-label" for="name">{{ form_label(form.speciality) }}</label>
        <div class="controls">
          {{ form_widget(form.speciality) }} 
          <span class="help-inline">{{form_errors(form.speciality)}}</span>  
        </div>
      </div>
      <div class="control-group {% if form_errors(form.consultantServices) %} error {% endif %}">
        <label class="control-label" for="slogan">{{ form_label(form.consultantServices) }}</label>
        <div class="controls">
          {{ form_widget(form.consultantServices) }} 
          <span class="help-inline">{{form_errors(form.consultantServices)}}</span>  
        </div>
      </div> 
      <div class="form-actions">
          <button type="submit" name="submit" class="btn btn-primary" data-toggle="button">Create &nbsp;&nbsp;<i class="icon-white icon-circle-arrow-right"></i></button>
                    &nbsp;&nbsp;<a href="{{ path('sked_app_consultant_list') }}" class="btn">Cancel</a>
      </div> 
      {{ form_rest(form) }} 
  </fieldset>
</form>
{{ tinymce_init() }}
     