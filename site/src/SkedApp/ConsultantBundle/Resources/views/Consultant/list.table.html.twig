<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered table-condensed">
    <thead>
          <tr>
           <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'#', 'c.id') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>  
                {% else %}
                    {% if pagination.isSorted('c.id') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %} 
            </th>   
           <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Full names', 'c.firstName') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>  
                {% else %}
                    {% if pagination.isSorted('c.firstName') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %} 
            </th>   
            {% if is_granted('ROLE_ADMIN') %}
            <th scope="col" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Company', 'c.company') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>  
                {% else %}
                    {% if pagination.isSorted('c.company') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %} 
            </th>   
            {% endif %}  
            <th  scope="col" class="table-heading-blue">Services </th>
            <th  scope="col" class="table-heading-blue"></th>
          </tr>
   </thead>
   <tbody>
          {% for consultant in pagination %}
          <tr>
              <td> 
                    <a href='{{path('sked_app_consultant_show', {'id': consultant.id }) }}' rel="tooltip" title="click to view">
                        <img src="/uploads/consultants/{{ consultant.id }}.{{ consultant.path }}" title="consultant profile image" width="20px" height="20px" />
                    </a>
              </td>
              <td>
                  <a href='{{path('sked_app_consultant_show', {'id': consultant.id }) }}' rel="tooltip" title="click to view">{{consultant.fullName}}</a>
              </td>
              {% if is_granted('ROLE_ADMIN') %}
              <td>
                  <a href='{{path('sked_app_company_show', {'id': consultant.company.id }) }}' >{{consultant.company.name}}</a>
              </td>
             {% endif %}
              <td>
                  {% for service in consultant.consultantServices %}
                      <span {{ cycle(['label-inverse', ''], service.id) }}">{{ service.name }}</span>
                  {% else %}
                       No listed services found.
                  {% endfor %}
              </td>
            <td>
                <small>
                    <a href='{{path('sked_app_consultant_show', {'id': consultant.id }) }}' rel="tooltip" title="click to view"><i class="icon-black icon-eye-open"></i>&nbsp;View</a>&nbsp;
                    <a href='{{path('sked_app_consultant_edit', {'id': consultant.id }) }}' rel="tooltip" title="click to edit"><i class="icon-black icon-edit"></i>&nbsp;Edit</a>&nbsp;
                    <a href='{{path('sked_app_consultant_delete', {'id': consultant.id }) }}' onclick="if(confirm('You are about to delete consultant {{consultant.firstName}} {{consultant.lastName}}, click ok to confirm action.')) return true; else return false; " rel="tooltip" title="click to delete"><i class="icon-black icon-trash"></i>&nbsp;Delete</a>
                </small>
            </td>
          </tr>
          {% endfor %}
    </tbody>
 </table>
<div class="btn-group pull-right">
    {{ knp_pagination_render(pagination) }}
</div>
