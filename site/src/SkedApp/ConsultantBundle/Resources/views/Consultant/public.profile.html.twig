{% extends "SkedAppConsultantBundle::layout.customer.html.twig" %}

{% block title %}SkedApp | Consultant Profile{% endblock %}

{% block menu %}
      {% set vars = {'controller': 'no_menu'} %}
      {% include "::menu.html.twig" with vars  %}
{% endblock %}

{% block alert %}
    {% include "::alert.html.twig" %}
{% endblock %}

{% block body %}
<div class="row-fluid body-main rounded-all">
    <div class="span5">
        <div class="consultant-background rounded-left">
        <h3>Consultant Profile</h3>
            <div class="white-bg">
                {% if file_exists(web_path~asset('uploads/consultants/'~consultant.id~'.'~consultant.path)) %}
                    <div class="image-shadow pull-left space-right20">
                        <div class="img-polaroid polaroid-width120">
                            <div class="image-dimensions120">
                                <a href="{{ asset('uploads/consultants/'~consultant.id~'.'~consultant.path) }}" class="lightbox1"><img src="{{ asset('uploads/consultants/'~consultant.id~'.'~consultant.path) }}" /></a>
                            </div>
                        </div>
                    </div>
                {% else %}
                {% if consultant.gender.name == "Male" %}
                    <div class="image-shadow pull-left space-right20">
                        <div class="img-polaroid polaroid-width120">
                            <div class="image-dimensions120">
                                <a href="{{ asset('/img/male.jpg') }}" class="lightbox1"><img src="{{ asset('/img/male.jpg') }}" /></a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="image-shadow pull-left space-right20">
                        <div class="img-polaroid polaroid-width120">
                            <div class="image-dimensions120">
                                <a href="{{ asset('/img/female.jpg') }}" class="lightbox1"><img src="{{ asset('/img/female.jpg') }}" /></a>
                            </div>
                        </div>
                    </div>
                    {% endif %}

                {% endif %}
                    <table class="gray-text">
                        <tr>
                            <td><strong>Full name: </strong></td>
                            <td>{{ consultant.fullName }}</td>
                        </tr>
                        <tr>
                            <td><strong>Gender: </strong></td>
                            <td>{{ consultant.gender.name }}</td>
                        </tr>
                        <tr>
                            <td><strong>Employer: </strong></td>
                            <td><a href="{{ path('sked_app_service_provider_show',{'id':consultant.company.id})}}.html" title="View service provider profile">{{ consultant.company.name }}</a></td>
                        </tr>
                        <tr>
                            <td><strong>Services: </strong></td>
                            <td>
                                {% for service in consultant.consultantServices %}
                                    <span class="label {{ cycle(['label-info', 'label-warning'], service.id) }}">{{ service.name }}</span>
                                    {% else %}
                                    No listed services found.
                                {% endfor %}
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2"><strong>Speciality: </strong></td>
                        </tr>
                        <tr>
                            <td colspan="2">{{ consultant.speciality | raw }}</td>
                        </tr>
                        <tr>
                            <td colspan="2"><strong>Professional statement: </strong></td>
                        </tr>
                        <tr>
                            <td colspan="2">{{ consultant.professionalStatement | raw }}</td>
                        </tr>
                    </table>

                <div class="clearfix"></div>
                <div class="spacer2"></div>
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            {% set slotCouter = 0%}    
                            {% for slot in slots %}
                            {% set slotCouter = loop.index %} 
                              {% if loop.index < 6%}  
                                
                              <td class="dark-gray-text">
                                  <a href="{{path('sked_app_booking_make', {'companyId': consultant.company.id, 'consultantId': consultant.id, 'date': attribute(slot,'startTime')|date('Y-m-d'), 'timeSlotStart': attribute(slot,'startTime')|date('H:i'), 'serviceIds': options.service.id}) }}"><strong>{{ attribute(slot,'startTime')|date('H:i') }}</strong></a>    
                                  <br>
                                  <em>
                                      <small>{{ attribute(slot,'startTime')|date('d M Y') }}</small>
                                  </em>
                              </td>  
                              {% endif %}  
                              
                            {% endfor %}
                        </tr>
                    </tbody>
                </table>
                <div class="spacer1"></div>
                <a href="{{ path('sked_app_invite_friends_consultant',{ 'slug' : consultant.slug})}}.html"  class="btn btn-primary pull-right">Refer a friend <i class="icon-white icon-circle-arrow-right"></i></a>
                <div class="spacer2"></div>
            </div>
         {% if consultant.company.companyPhotos|length > 0 %}
            <h4>Service Provider Pictures</h4>
            <div class="bs-docs-example bs-docs-example-images">
              {% for photo in consultant.company.companyPhotos %}
                    {% if photo.isDeleted != "true" %}
                         <a href="{{ asset('/uploads/company_photos/'~photo.id~'.'~photo.path) }}" class="lightbox"><img src="{{ asset('/uploads/company_photos/'~photo.id~'.'~photo.path) }}" style="width:80px; height:80px" class="img-polaroid space-right7 space-right-bottom"></a>
                    {% endif %}
              {% endfor %}
              <div class="clearfix"></div>
              <div class="spacer1"></div>
              {% if options|length > 0 %}
                  <a href="{{ path('sked_app_search_query',{ 'date' : options.date , 'serviceId' : options.service.id ,'lat': options.lat ,'lng': options.lng, 'categoryId': options.categoryId})}}"  class="btn btn-warning pull-right">Back to Search <i class="icon-white icon-circle-arrow-right"></i></a>
              {% endif %}
              <div class="clearfix"></div>
            </div>
         {% else %}
            <div class="clearfix"></div>
            <div class="spacer2"></div>
            <div class="spacer2"></div>
            <div class="spacer2"></div>
            <div class="spacer2"></div>
            {% if options|length > 0 %}
                <a href="{{ path('sked_app_search_query',{ 'date' : options.date , 'serviceId' : options.service.id ,'lat': options.lat ,'lng': options.lng, 'categoryId': options.categoryId})}}"  class="btn pull-right">Back to Search <i class="icon-black icon-circle-arrow-right"></i></a>
            {% endif %}
            <div class="clearfix"></div>

         {% endif %}
        </div>
    </div>
    <div class="span7">
        <div class="map-box pad-right20">
        {% render url('sked_app_service_provider_show_map', { 'id': consultant.company.id }) %}
        </div>
    </div> <!-- End .row-fluid -->
</div>
{% endblock body %}
