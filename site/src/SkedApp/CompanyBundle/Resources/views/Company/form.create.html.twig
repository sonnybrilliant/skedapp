<form action="{{ path('sked_app_company_create') }}" method="POST" {{ form_enctype(form) }}>
    <fieldset>
        <div for="company_name">{{ form_label(form.name) }}</div>
        {{ form_widget(form.name) }}
        <span class="help-inline">{{form_errors(form.name)}}</span>
        <div for="company_contact_number">{{ form_label(form.contactNumber) }}</div>
        {{ form_widget(form.contactNumber) }}
        <span class="help-inline">{{form_errors(form.contactNumber)}}</span>
        <div for="picture">{{ form_label(form.picture) }}</div>
        {{ form_widget(form.picture) }}
        <span class="help-inline">{{form_errors(form.picture)}}</span>
        <div for="professional_statement">{{ form_label(form.description) }}</div>
        <div style="margin: 0px;" class="span12">{{ form_widget(form.description) }}</span>
        <span class="help-inline">{{form_errors(form.description)}}</span>
        <div for="address">{{ form_label(form.address) }}</div>
        {{ form_widget(form.address) }}
        {{ form_widget(form.locality) }} 
        {{ form_widget(form.country) }} 
        {{ form_widget(form.lat) }} 
        {{ form_widget(form.lng) }}
        <span class="help-inline">{{form_errors(form.address)}}</span>
        <div class="btn-toolbar pull-right">
            <div class="btn-group">
                <button class="btn btn-warning">Submit <i class="icon-white icon-circle-arrow-right"></i></button>
            </div>
            <div class="btn-group">
                <button class="btn btn-small">Cancel</button>
            </div>
        </div>
        <script type="text/javascript">
          var blnAddress = true;
        </script>
    </fieldset>
    {{ form_rest(form) }}    
</form>
{{ tinymce_init() }}
