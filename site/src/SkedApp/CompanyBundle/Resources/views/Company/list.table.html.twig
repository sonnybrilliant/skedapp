<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th scope="col" width="5%" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'#', 'c.id') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>  
                {% else %}
                    {% if pagination.isSorted('c.id') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %} 
            </th>
            <th scope="col" width="25%" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Name', 'c.name') }}
                {% if pagination.isSorted('c.name') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
               {% endif %}    
            </th>
            <th scope="col" width="10%" class="table-heading-blue">Consultants</th>
            <th scope="col" width="10%" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Active', 'c.isActive') }}
                {% if pagination.isSorted('c.isActive') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                {% endif %}    
            </th>
            <th scope="col" width="25%" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Created At', 'c.createdAt') }}
                {% if pagination.isSorted('c.createdAt') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                {% endif %}                    
            </th>
            <th scope="col" width="25%" class="table-heading-blue"></th>
        </tr>
    </thead>
    <tbody>
        {% for company in pagination %}
        <tr>
           <td>{{company.id}}</td>
           <td>{{company.name}}</td>
           <td>{{company.consultants.count}}</td>
           {% if company.isActive %}
                <td><span>Yes</span></td>
           {% else %}
                <td><span>No</span></td>
           {% endif%}
           <td>{{company.createdAt|date('Y-m-d H:i A')}}</td>
           <td>
               <small>
                  <a href='{{path('sked_app_company_show', {'id': company.id }) }}' rel="tooltip" title="click to view" class="btn btn-small btn-primary"><i class="icon-white icon-eye-open"></i>&nbsp;View</a>&nbsp;
                  <a href='{{path('sked_app_company_edit', {'id': company.id }) }}' rel="tooltip" title="click to edit" class="btn btn-small btn-info"><i class="icon-white icon-edit"></i>&nbsp;Edit</a>&nbsp;
                  <a href='{{path('sked_app_company_delete', {'id': company.id }) }}' rel="tooltip" title="click to delete" class="btn btn-small btn-danger"><i class="icon-white icon-trash"></i>&nbsp;Delete</a>
               </small>
           </td>  
         </tr>
        {% endfor %}
    </tbody>  
</table>
<div class="btn-group pull-right">
    {{ knp_pagination_render(pagination) }}
</div>