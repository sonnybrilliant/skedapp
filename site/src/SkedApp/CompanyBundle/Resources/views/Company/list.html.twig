{% extends "SkedAppCompanyBundle::layout.html.twig" %}
{% block title %}List service providers{% endblock %}

{% block body %}
<div class="row-fluid body-secondary">
    <div class="span12">
        <h3>Manage service providers</h3>
        <div class="span5">
            {% set vars = {'action': 'List'} %}
            {% include 'SkedAppCompanyBundle::breadcrumb.html.twig' with vars  %}
            </div>
            <div class="span6 pull-right">
                <a href="{{ path('sked_app_company_new') }}" class="btn btn-warning"><i class="icon-white icon-plus-sign"></i>&nbsp;<strong>Add Service Provider</strong></a>
                <form class="form-inline pull-right">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-search" ></i></span>
                        <input name="searchText" title="search" type="text" value="" placeholder="search" class="input-small search" />
                        <input type="submit" value="GO!" class="btn btn-warning btn-small search-button" />
                    </div>
                </form>
            </div>
        {% include "SkedAppCompanyBundle:Company:list.table.html.twig" %} 

        </div> <!-- Dashboard Content --> 
    </div>

{% endblock body %}