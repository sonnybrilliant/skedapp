{% extends "SkedAppCompanyBundle::layout.html.twig" %}
{% block title %}List service providers{% endblock %}

{% block body %}
    {% block menu %}
    <div class="span3 bs-docs-sidenav">
        {% include "::menu.html.twig" %}
    </div>
    {% endblock menu %}
    {% block content %}
    <div class="span9">
        <h3>Manage service providers</h3>
        <div class="span5" style="margin-left: -15px">
           {% set vars = {'action': 'List'} %}
           {% include 'SkedAppCompanyBundle::breadcrumb.html.twig' with vars  %}
        </div>
        <div class="span3 pull-right">
                <span><a href="{{ path('sked_app_company_new') }}" class="btn btn-warning btn-small pull-right"><i class="icon-white icon-plus-sign"></i> Add Service Provider</a></span>
        </div>
        {% block alert %}
            {% include "::alert.html.twig" %}
        {% endblock %}
        <div class="span9" style="margin-left: 0px">
            {% include "SkedAppCompanyBundle:Company:list.table.html.twig" %}
        </div>
    </div>
    {% endblock content %}
{% endblock body %}