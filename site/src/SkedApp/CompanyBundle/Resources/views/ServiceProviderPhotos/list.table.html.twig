<table width="100%" border="0" cellspacing="0" cellpadding="0" class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th scope="col" width="5%" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'#', 'c.id') }}
                {% if isDirectionSet == false %}
                    <span class="pull-right"><i class="icon-chevron-up"></i></span>  
                {% else %}
                    {% if pagination.isSorted('c.id') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                    {% endif %}
                {% endif %} 
            </th>
            <th scope="col" width="25%" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Name', 'c.name') }}
                {% if pagination.isSorted('c.name') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
               {% endif %}    
            </th>
            <th scope="col" width="25%" class="table-heading-blue">
                {{ knp_pagination_sortable(pagination,'Created At', 'c.createdAt') }}
                {% if pagination.isSorted('c.createdAt') %} 
                        {% if direction == 'asc'%} 
                            <span class="pull-right"><i class="icon-chevron-up"></i></span> 
                        {% else %}
                            <span class="pull-right"><i class="icon-chevron-down"></i></span>
                        {% endif %}
                {% endif %}                    
            </th>
            <th scope="col" width="25%" class="table-heading-blue"></th>
        </tr>
    </thead>
    <tbody>
        {% for companyPhoto in pagination %}
        <tr>
            <td><a href="{{ asset('/uploads/company_photos/'~companyPhoto.id~'.'~companyPhoto.path) }}" class="lightbox"> <img src="{{ asset('/uploads/company_photos/'~companyPhoto.id~'.'~companyPhoto.path) }}" width="20" height="20" class="space-left space-right"/></a></td>
           <td>{{companyPhoto.caption}}</td>
           <td>{{companyPhoto.createdAt|date('Y-m-d H:i A')}}</td>
           <td>
               <small>
                  <a href='{{path('sked_app_service_provider_photo_delete', {'serviceProviderId': companyPhoto.company.id , 'photoId': companyPhoto.id}) }}.html' rel="tooltip" title="click to delete" class="btn btn-small btn-danger"><i class="icon-white icon-trash"></i>&nbsp;Delete</a>
               </small>
           </td>  
         </tr>
        {% endfor %}
    </tbody>  
</table>
<div class="btn-group pull-right">
    {{ knp_pagination_render(pagination) }}
</div>