<form action="{{ path('sked_app_service_provider_add_photo', {'serviceProviderId' : serviceProviderId}) }}" method="POST" {{ form_enctype(form) }}>
    <fieldset>
        <div class="control-group {% if form_errors(form.caption) %} error {% endif %}">
            <div class="control-label" for="caption">{{ form_label(form.caption) }}</div>
            <div class="controls">
                {{ form_widget(form.caption) }}
                <span class="help-inline">{{form_errors(form.caption)}}</span>    
            </div>
        </div>  
        <div class="control-group {% if form_errors(form.picture) %} error {% endif %}">
            <div class="control-label" for="picture">{{ form_label(form.picture) }}</div>
            <div class="controls">
                {{ form_widget(form.picture) }}
                <span class="help-inline">{{form_errors(form.picture)}}</span>    
            </div>
        </div> 
        <div class="btn-toolbar pull-right">
            <div class="btn-group">
                <button type="submit" name="submit" class="btn btn-warning">Submit <i class="icon-white icon-circle-arrow-right"></i></button>
            </div>
            <div class="btn-group">
                <a href="{{path('sked_app_service_provider_show', {'id': serviceProviderId }) }}.html" class="btn btn-small">Cancel</a>
            </div>
        </div>
    </fieldset>
    {{ form_rest(form) }}    
</form>
