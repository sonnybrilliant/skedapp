{% extends "SkedAppCompanyBundle::layout.html.twig" %}
{% block title %}Service Provider Profile{% endblock %}

{% block alert %}
    {% include "::alert.html.twig" %}
{% endblock %}  

{% block body %}        
<div class="row-fluid body-secondary">
    <div class="span5">
        <div class="dash-forms-background">
            <h3>Service Provider Profile</h3>
            <div class="whiteBackground">
                <img src="{{ asset('/uploads/companies/'~company.id~'.'~company.path) }}" style="width:140px; height:140px" class="space-left space-right pull-left img-polaroid"/>
                <div style="padding-right: 10px;">
                        <strong class="dark-gray-text">Name: </strong><span class="gray-text">{{ company.name }}</span>
                        <div class="spacer1"></div>
                        <strong class="dark-gray-text">Contact Details: </strong><span class="gray-text">{{ company.contactNumber }}</span>
                        <div class="spacer1"></div>
                        <strong class="dark-gray-text">Description: </strong><span class="gray-text">{{ company.description|raw }}</span>
                </div>
                <div class="clearfix"></div>
                <div class="spacer1"></div>

            </div>
            <div class="spacer1"></div>
            <div class="spacer2"></div>
            <h3>Photos</h3>
            <div class="bs-docs-example bs-docs-example-images">
                {% for photo in company.companyPhotos %}
                   <img src="{{ asset('/uploads/company_photos/'~photo.id~'.'~photo.path) }}" style="width:80px; height:80px" class="img-polaroid space-right7 space-right-bottom">   
                {% else %}
                    <img src="{{ asset('/img/gallery.png') }}"  class="img-polaroid space-right7 space-right-bottom">
                    <img src="{{ asset('/img/gallery.png') }}" class="img-polaroid space-right7 space-right-bottom">
                    <img src="{{ asset('/img/gallery.png') }}" class="img-polaroid space-right7 space-right-bottom">
                {% endfor %}    
                <div class="clearfix"></div>
                <a href="{{ path('sked_app_service_provider_add_photo', {'serviceProviderId': company.id }) }}.html" title="Add a photo" class="pull-right btn btn-warning">Add photo</a>
                <div class="spacer2"></div>
            </div>
        </div>
    </div>
    <div class="span7">
        <div class="map-box">
            <h3>Location Details</h3>
            {{ google_map_container(map) }}
            <address>
                <h4>Service Provider: {{ company.name }}</h4>
                <strong>Location:</strong><br>
                {{ company.address }}
            </address>
        </div>
    </div>
</div> <!-- End .row-fluid -->
{{ google_map_js(map) }}
{% endblock body %}