{% extends "SkedAppCategoryBundle::layout.html.twig" %}
{% block title %}SkedApp | View category details{% endblock %}

{% block body %}
    {% block content %}
     {% block alert %}
            {% include "::alert.html.twig" %}
        {% endblock %}
      <div class="clearfix"></div>
        <div class="row-fluid body-secondary">
        
        
        <div class="dash-forms-background">
        
        <h3>Category profile</h3>
        <div class="span5" style="margin-left: 0px">
           {% set vars = {'action': 'Show'} %}
           {% include 'SkedAppCategoryBundle::breadcrumb.html.twig' with vars  %}
        </div>
        <div class="clearfix"></div>
        <div style="margin-left: 0px;" class="span5">
        <div class="whiteBackground">
        <div style="margin-left: 0px"><img src="/uploads/categories/{{ category.id }}.{{ category.path }}" style="width:150px; height:120px; float: left;" alt="profile picture" class="space-left img-polaroid"></div>
        
        <div class="span6">
            <p><strong>Name</strong>: <span class="gray-text">{{ category.name }} </span></p>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
        <div class="spacer1"></div>
        </div>
        </div>
<div class="clearfix"></div>
<div class="spacer1"></div>
  </div>
    </div>
    {% endblock content %}

{% endblock body %}