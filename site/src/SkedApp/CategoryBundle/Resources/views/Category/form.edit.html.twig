<form action="{{ path('sked_app_category_update' , { id:id}) }}" method="POST" {{ form_enctype(form) }}>
    <fieldset>
        <div class="control-group {% if form_errors(form.name) %} error {% endif %}">
            <div class="control-label" for="name">{{ form_label(form.name) }}</div>
            <div class="controls">
                {{ form_widget(form.name) }}
                <span class="help-inline">{{form_errors(form.name)}}</span>
            </div>
        </div>
        <div class="btn-toolbar pull-right">
            <div class="btn-group">
                <button type="submit" name="submit" class="btn btn-warning">Submit <i class="icon-white icon-circle-arrow-right"></i></button>
            </div>
            <div class="btn-group">
                <a href="{{ path('sked_app_category_list') }}" class="btn btn-small">Cancel</a>
            </div>
        </div>
    </fieldset>
    {{ form_rest(form) }} 
</form>
{{ tinymce_init() }}
