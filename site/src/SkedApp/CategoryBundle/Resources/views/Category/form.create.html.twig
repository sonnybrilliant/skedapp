<form action="{{ path('sked_app_category_create') }}" method="POST" {{ form_enctype(form) }}>
    <fieldset>
        <div class="control-group {% if form_errors(form.name) %} error {% endif %}">
            <div class="control-label" for="name">{{ form_label(form.name) }}</div>
            <div class="controls">
                {{ form_widget(form.name) }} 
                <span class="help-inline">{{form_errors(form.name)}}</span>
            </div>
        </div>
        <div class="control-group {% if form_errors(form.picture) %} error {% endif %}">
            <div class="control-label" for="picture">{{ form_label(form.picture) }}</div>
            <div class="controls">
                {{ form_widget(form.picture) }}
                <span class="help-inline">{{form_errors(form.picture)}}</span>
            </div>
        </div>
        <div class="control-group {% if form_errors(form.description) %} error {% endif %}">
            <div class="control-label" for="description">{{ form_label(form.description) }}</div>
            <div class="controls">
                {{ form_widget(form.description) }}
                <span class="help-inline">{{form_errors(form.description)}}</span>
            </div>
        </div>
        <div class="btn-toolbar pull-right">
            <div class="btn-group">
                <button class="btn btn-warning">Submit <i class="icon-white icon-circle-arrow-right"></i></button>
            </div>
            <div class="btn-group">
                <a href="{{ path('sked_app_category_list') }}" class="btn btn-small">Cancel</a>
            </div>#
        </div>
        <div class="clearfix"></div>
        <div class="spacer1"></div>  
    </fieldset>
    {{ form_rest(form) }} 
</form>
{{ tinymce_init() }}
