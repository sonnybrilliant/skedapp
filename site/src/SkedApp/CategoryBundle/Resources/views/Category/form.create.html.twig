<form action="{{ path('sked_app_category_create') }}" method="POST" {{ form_enctype(form) }}>
    <fieldset>
      <label for="name">{{ form_label(form.name) }}</label>
      {{ form_widget(form.name) }} 
      <span class="help-inline">{{form_errors(form.name)}}</span>
      <label for="picture">{{ form_label(form.picture) }}</label>
      {{ form_widget(form.picture) }}
      <span class="help-inline">{{form_errors(form.picture)}}</span>  
      <label for="description">{{ form_label(form.description) }}</label>
      {{ form_widget(form.description) }} 
      <span class="help-inline">{{form_errors(form.description)}}</span>  
      <div class="btn-toolbar pull-right">
          <div class="btn-group">
              <button class="btn btn-warning">Submit <i class="icon-white icon-circle-arrow-right"></i></button>
          </div>
                                  <div class="btn-group">
                  <a href="{{ path('sked_app_category_list') }}" class="btn btn-small">Cancel</a>
          </div>
    
</div>
<div class="clearfix"></div>
<div class="spacer1"></div>  
    </fieldset>
{{ form_rest(form) }} 
</form>
{{ tinymce_init() }}
