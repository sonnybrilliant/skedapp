<section>
    <span><a href="{{ path('sked_app_category_new') }}" class="btn btn-warning btn-small pull-right"><i class="icon-white icon-plus-sign"></i> Add Category</a></span>
    <table id="sortable" class="table table-striped table-condensed tablesorter">
            <thead>
              <tr>
                <th><span class="sort-image"><img src="{{sort_img}}" title="Sort" class="{{sort}}" /></span>{{ pagination.sortable('Category name', 'c.name')|raw }}</th>
                <th>Actions</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {% for category in pagination %}
              <tr>
                <td>{{category.name}}</td>
                <td></a>&nbsp;&nbsp;<a href='{{path('sked_app_category_edit', {'id': category.id }) }}' rel="tooltip" title="click to edit"><i class="icon-edit"></i>&nbsp;Edit</a> &nbsp;<a href='{{path('sked_app_category_delete', {'id': category.id }) }}' onclick="if(confirm('You are about to delete {{category.name}} category, click ok to confirm action.')) return true; else return false; " rel="tooltip" title="click to delete"><i class="icon-trash"></i>&nbsp;Delete</a></td>
              </tr>
              {% endfor %}
            </tbody>
     </table>
    <div class="pagination pull-right">
        {{ pagination.render()|raw }}
    </div>
</section>


